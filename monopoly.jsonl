      "gameplayMechanics": {
        "coreMechanics": [
          {
            "name": "Turn-Based Movement",
            "description": "Players roll two six-sided dice to move their token clockwise around the board. The total determines the number of spaces moved.",
            "type": "movement",
            "details": {
              "diceCount": 2,
              "diceSides": 6,
              "doublesRule": {
                "extraTurn": true,
                "maxDoubles": 3,
                "jailOnThird": true
              }
            }
          },
          {
            "name": "Property Acquisition",
            "description": "Players can purchase unowned properties they land on. If they decline, the property is auctioned to the highest bidder.",
            "type": "resource_management",
            "details": {
              "purchase": {
                "allowed": true,
                "cost": "property_price"
              },
              "auction": {
                "trigger": "decline_purchase",
                "startingBid": 10,
                "bidIncrement": 1
              }
            }
          },
          {
            "name": "Rent Payment",
            "description": "When landing on an owned property, players pay rent to the owner based on the property's development level and ownership status.",
            "type": "economic",
            "details": {
              "rentTiers": {
                "base": "rent[0]",
                "withHouses": "rent[1-4]",
                "withHotel": "rent[5]",
                "monopolyBonus": "double_rent_if_full_group_owned"
              },
              "railroadRent": {
                "ownedCount": [1, 2, 3, 4],
                "rentValues": [25, 50, 100, 200]
              },
              "utilityRent": {
                "oneUtility": "4x_dice_roll",
                "twoUtilities": "10x_dice_roll"
              }
            }
          },
          {
            "name": "Property Development",
            "description": "Players can build houses and hotels on properties they own a full color group of, increasing rent values.",
            "type": "resource_management",
            "details": {
              "requirements": {
                "fullGroupOwnership": true,
                "evenBuildRule": true
              },
              "limits": {
                "housesPerProperty": 4,
                "hotelsPerProperty": 1,
                "totalHouses": 32,
                "totalHotels": 12
              },
              "costs": {
                "house": "group_specific",
                "hotel": "group_specific"
              }
            }
          },
          {
            "name": "Trading",
            "description": "Players can trade properties, money, and Get Out of Jail Free cards to form strategic alliances or complete monopolies.",
            "type": "negotiation",
            "details": {
              "allowedItems": ["properties", "money", "getOutOfJailCards"],
              "restrictions": {
                "noBuildingsOnTradedProperties": true,
                "mutualAgreement": true
              }
            }
          },
          {
            "name": "Mortgaging",
            "description": "Players can mortgage properties to raise funds, receiving half the property's value but forgoing rent until unmortgaged.",
            "type": "economic",
            "details": {
              "mortgageValue": "property_mortgage",
              "unmortgageCost": "mortgage_value + 10% interest",
              "restrictions": {
                "noBuildings": true
              }
            }
          },
          {
            "name": "Jail System",
            "description": "Players sent to Jail must either pay a fine, use a card, or attempt to roll doubles to get out within three turns.",
            "type": "penalty",
            "details": {
              "entry": {
                "triggers": ["land_on_go_to_jail", "chance_card", "community_chest_card", "three_doubles"],
                "position": 10
              },
              "exit": {
                "payFine": 50,
                "useCard": "getOutOfJail",
                "rollDoubles": {
                  "attempts": 3,
                  "onFail": "pay_fine"
                }
              }
            }
          },
          {
            "name": "Bankruptcy",
            "description": "Players who cannot pay debts declare bankruptcy, transferring assets to the creditor or bank, and are eliminated.",
            "type": "elimination",
            "details": {
              "triggers": ["insufficient_funds"],
              "toPlayer": {
                "transfer": ["properties", "money", "getOutOfJailCards"]
              },
              "toBank": {
                "properties": "return_to_bank",
                "mortgagedProperties": "remain_mortgaged"
              }
            }
          },
          {
            "name": "Chance and Community Chest Cards",
            "description": "Players draw cards that provide rewards, penalties, or movement instructions, adding randomness to the game.",
            "type": "luck",
            "details": {
              "cardTypes": ["chance", "community_chest"],
              "actions": [
                "collect_money",
                "pay_money",
                "move_to_space",
                "move_to_nearest",
                "pay_per_building",
                "collect_from_players",
                "pay_to_players",
                "get_out_of_jail"
              ]
            }
          }
        ],
        "playerInteractions": {
          "competitive": {
            "description": "Players compete to bankrupt others by charging high rents and acquiring monopolies.",
            "mechanisms": ["rent_payment", "property_development", "bankruptcy"]
          },
          "cooperative": {
            "description": "Players may negotiate trades to mutual benefit, such as completing color groups.",
            "mechanisms": ["trading"]
          },
          "strategic": {
            "description": "Players make decisions on property purchases, development, and trading to maximize wealth.",
            "mechanisms": ["property_acquisition", "property_development", "trading", "mortgaging"]
          }
        },
        "strategicElements": [
          {
            "name": "Monopoly Building",
            "description": "Acquiring all properties in a color group to build houses and hotels, significantly increasing rent.",
            "impact": "High rent potential, faster opponent bankruptcy"
          },
          {
            "name": "Railroad and Utility Control",
            "description": "Owning multiple railroads or both utilities for consistent income with low investment.",
            "impact": "Stable income, less reliant on development"
          },
          {
            "name": "Cash Flow Management",
            "description": "Balancing property purchases, development, and maintaining liquidity to avoid bankruptcy.",
            "impact": "Survivability during high rent payments or unexpected costs"
          },
          {
            "name": "Negotiation",
            "description": "Trading properties or cards to gain strategic advantages, often requiring persuasive skills.",
            "impact": "Accelerates monopoly formation, alters game dynamics"
          }
        ],
        "randomnessFactors": [
          {
            "name": "Dice Rolls",
            "description": "Movement and utility rent depend on random dice rolls.",
